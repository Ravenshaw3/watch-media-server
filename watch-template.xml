<?xml version="1.0"?>
<Container version="2">
  <Name>Watch Media Server</Name>
  <Repository>ravenshaw3/watch-media-server:latest</Repository>
  <Registry>https://hub.docker.com/</Registry>
  <Network>bridge</Network>
  <MyIP>192.168.1.100</MyIP>
  <Shell>bash</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/Ravenshaw3/watch-media-server/issues</Support>
  <Project>https://github.com/Ravenshaw3/watch-media-server</Project>
  <Overview>ðŸŽ¬ Watch Media Server - A comprehensive web-based media library management system for movies and TV shows. Features automatic library scanning, metadata extraction, built-in streaming player, file organization, and console management. Perfect for organizing and playing your media collection from any web browser on any device.</Overview>
  <Category>MediaServer:Other</Category>
  <WebUI>http://[IP]:[PORT:8080]/</WebUI>
  <TemplateURL/>
  <Icon>https://raw.githubusercontent.com/Ravenshaw3/watch-media-server/main/icon.png</Icon>
  <ExtraParams/>
  <PostArgs/>
  <CPUset/>
  <DateInstalled>1734019200</DateInstalled>
  <DonateText>Support Watch Media Server Development</DonateText>
  <DonateLink>https://github.com/Ravenshaw3/watch-media-server</DonateLink>
  <Description>Watch Media Server - A modern, feature-rich media library management system with web interface, console management, Docker support, and Unraid compatibility. Organize, stream, and manage your movie and TV show collection with ease.</Description>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>8080</HostPort>
        <ContainerPort>8080</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Data>
    <Volume>
      <HostDir>/mnt/user/appdata/watch</HostDir>
      <ContainerDir>/app/data</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/media</HostDir>
      <ContainerDir>/media</ContainerDir>
      <Mode>ro</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/appdata/watch/config</HostDir>
      <ContainerDir>/app/config</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <Environment>
    <Variable>
      <Value>UTC</Value>
      <Mode/>
      <Name>TZ</Name>
    </Variable>
    <Variable>
      <Value>/media</Value>
      <Mode/>
      <Name>MEDIA_LIBRARY_PATH</Name>
    </Variable>
    <Variable>
      <Value>false</Value>
      <Mode/>
      <Name>DEBUG</Name>
    </Variable>
    <Variable>
      <Value>info</Value>
      <Mode/>
      <Name>LOG_LEVEL</Name>
    </Variable>
    <Variable>
      <Value>true</Value>
      <Mode/>
      <Name>AUTO_SCAN</Name>
    </Variable>
    <Variable>
      <Value>3600</Value>
      <Mode/>
      <Name>SCAN_INTERVAL</Name>
    </Variable>
    <Variable>
      <Value>1080p</Value>
      <Mode/>
      <Name>MAX_RESOLUTION</Name>
    </Variable>
  </Environment>
  <Labels>
    <Label>maintainer=Watch Media Server Team</Label>
    <Label>description=Web-based media library management system</Label>
    <Label>version=1.0.0</Label>
    <Label>category=MediaServer</Label>
  </Labels>
  <Config Name="WebUI" Target="8080" Default="8080" Mode="tcp" Description="Web interface port (change if port 8080 is in use)" Type="Port" Display="always" Required="true" Mask="false">8080</Config>
  <Config Name="Media Library" Target="/media" Default="/mnt/user/media" Mode="ro" Description="Path to your media library (Movies, TV Shows, etc.)" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/media</Config>
  <Config Name="Data Directory" Target="/app/data" Default="/mnt/user/appdata/watch" Mode="rw" Description="Directory for database and application logs" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/watch</Config>
  <Config Name="Config Directory" Target="/app/config" Default="/mnt/user/appdata/watch/config" Mode="rw" Description="Directory for configuration files (optional)" Type="Path" Display="always" Required="false" Mask="false">/mnt/user/appdata/watch/config</Config>
  <Config Name="Timezone" Target="TZ" Default="UTC" Mode="" Description="Set your timezone (e.g., America/New_York, Europe/London)" Type="Variable" Display="always" Required="false" Mask="false">UTC</Config>
  <Config Name="Debug Mode" Target="DEBUG" Default="false" Mode="" Description="Enable debug mode for troubleshooting" Type="Variable" Display="always" Required="false" Mask="false">false</Config>
  <Config Name="Log Level" Target="LOG_LEVEL" Default="info" Mode="" Description="Set logging level (debug, info, warning, error)" Type="Variable" Display="always" Required="false" Mask="false">info</Config>
  <Config Name="Auto Scan" Target="AUTO_SCAN" Default="true" Mode="" Description="Enable automatic library scanning" Type="Variable" Display="always" Required="false" Mask="false">true</Config>
  <Config Name="Scan Interval" Target="SCAN_INTERVAL" Default="3600" Mode="" Description="Library scan interval in seconds (3600 = 1 hour)" Type="Variable" Display="always" Required="false" Mask="false">3600</Config>
  <Config Name="Max Resolution" Target="MAX_RESOLUTION" Default="1080p" Mode="" Description="Maximum streaming resolution (720p, 1080p, 4k)" Type="Variable" Display="always" Required="false" Mask="false">1080p</Config>
</Container>
